package programs;
import java.util.Scanner;

public class Ctask17 {
	public static void main(String args[]) {
		int num,i,sum=0;
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter a number");
		num=scan.nextInt();
		scan.close();
		for (i=0;i<=num;i=i+2)
		{
			sum=sum+i;
			
		}
	System.out.println(sum);


}
}